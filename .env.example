# Ktor Server
KTOR_PORT=8080

# MongoDB Connection
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_RS=
MONGO_DATABASE=kupidon
MONGO_BACKEND_CLIENT_CERT=
MONGO_CA_CERT=

# Password Hashing
PWD_HASHING_ALGORITHM=PBKDF2WithHmacSHA256
PWD_HASHING_SECRET=your-secret-key-here
PWD_HASHING_ITERATIONS=10000
PWD_HASHING_HASH_LEN=256

# JWT Authentication
AUTH_REFRESH_TOKEN_SECRET=your-refresh-token-secret-here
AUTH_ACCESS_TOKEN_SECRET=your-access-token-secret-here

# Firebase (optional - for push notifications)
FIREBASE_SERVICE_ACCOUNT_PATH=/path/to/firebase-service-account.json
FIREBASE_SENDER_ID=your-sender-id
FIREBASE_VAPID_PUBLIC_KEY=your-vapid-public-key

# Email (optional - for email verification)
MAIL_EMAIL=your-email@example.com
MAIL_PWD=your-email-password
